@model Calabonga.Facts.Web.ViewModels.FactViewModel
<div class="card my-3" id="@Model.Id">
    <div class="card-header">
        <div class="row">
            <div class="col">
                <div class="float-start">@Model.CreatedAt.ToString("d")</div>
            </div>
            <div class="col">
                <div class="float-end">
                    <partial name="_FactActions" model="Model.Id" />
                    <partial name="_FactLink" model="Model.Id" view-data="ViewData" />
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                @if (ViewData["HideLink"] is null)
                {
                    <p class="lead">
                        @Model.Content
                    </p>
                    <p>
                        <partial name="_Tags" model="Model.Tags" />
                    </p>
                }
                else
                {
                    <img src="@Url.Action("GetPicture", "Site", new { factId = Model.Id })" class="img-fluid" />
                }
            </div>
        </div>
    </div>
</div>

@if (ViewData["ReturnUrl"] is not null)
{
    <a href="@Url.Content(ViewData["ReturnUrl"].ToString())" class="btn btn-sm btn-outline-secondary">Назад</a>
}